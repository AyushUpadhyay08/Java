//Write a Program to calculate Profit and loss percentage by inputting the cost,selling,and maintenance price.
import java.util.*;

import javax.lang.model.util.ElementScanner14;
class J {
    public static void main(String args[]) {
        Scanner sc = new Scanner(System.in);
        System.out.println("Enter the Cost,Selling ,and Maintenance price of product:");
        int c = sc.nextInt();
        int s = sc.nextInt();
        int m = sc.nextInt();
        if(s>(c+m))
        {
            int p=s-(c+m);
            System.out.println("Profit will be of: " + p);
            System.out.println("Profit percentage: " + ((p * 100) / (c + m)));
        }
        else
        {
            int l=(c+m)-s;
            System.out.println("Loss will be of: "+l);
            System.out.println("Loss Percentage: "+((l*100)/(c+m)));
        }
        }
        
    }
